[alias]
    # add
    a = add
    ad = !git ls-files --multi -o --exclude-standard | fzf --multi --preview 'git diff --color=always {}' | xargs git add && git s
    # diff
    d = diff
    # commit
    co = commit
    cv = commit -v
    # switch
    sw = switch
    new = switch -c
    cd = !git-cd # ~/bin/git-cd
    # status
    st = status
    ss = status -s
    # branch
    br = branch
    ba = branch -abberv
    bm = branch --merged
    bn = branch --no-merged
    cleanup = !git branch --merged | egrep -v '\\*|main|master|develop' | xargs git branch -d
    # fetch
    fc = fetch
    # push
    ps = push origin $(git rev-parse --abberv-ref HEAD)
    # pull
    pl = pull origin $(git rev-parse --abberv-ref HEAD)
    ub = pull --rebase origin master # update branch
    # stash
    save = stash save
    load = !git stash list | fzf --select-1 --preview='' | awk -F ':' '{print $1}' | xargs git stash appl
    # reset
    rs = reset
    # restore
    rst = !git status -s | fzf | awk '{print $2}' | xargs git restore
    rsts = !git status -s | fzf | awk '{print $2}' | xargs git restore --staged
    # log
    df = !git hist | fzf --select-1 --preview=""| awk '{print $2}' | xargs -I {} git diff {}^ {}
    lg = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
    hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
    browse = !git-browse # ~/bin/git-browse
    # github
    pr = !gh pr view --web

[core]
    excludesfile = ~/.gitignore
    preloadindex = true

[color]
    ui = auto

[ghq]
    root = ~/go/src
	root = ~/Development/
[ghq "https://github.com/Fablic"]
    root = ~/Fablic/

[github]
	user = craft-cat

[grep]
    lineNumber = true

[help]
    autocorrect = 1

[init]
	defaultBranch = main

[merge]
    tool = vscode
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "vscode"]
    cmd = '/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code' \"$MERGED\"
    trustExitCode = false
